<?xml version="1.0" encoding="utf-8" ?>
<zxing:ZXingScannerPage xmlns="http://xamarin.com/schemas/2014/forms"
                        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                        x:Class="EBZ.Mobile.Views.Sales.StartSalesPage"
                        xmlns:zxing="clr-namespace:ZXing.Net.Mobile.Forms;assembly=ZXing.Net.Mobile.Forms"
                        xmlns:buttons="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
                        Title="Scan screen" IsScanning="true">
    <StackLayout>
        <Button  Text="Scan a transaction">
        </Button>
        <buttons:SfButton 
                              x:Name="buttonScanDefaultOverlay"
                              Text="Scan a transaction"                              
                              HeightRequest="40"
                              WidthRequest="60"
                              Margin="20,20,20,20"
                              BorderWidth="1"
                              CornerRadius="30"/>
        <StackLayout Margin="25" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            
            <Button x:Name="btnBegin" Text="Begin">
            </Button>
        </StackLayout>
    </StackLayout>
</zxing:ZXingScannerPage>